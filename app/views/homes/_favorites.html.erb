<% if user_signed_in? %>
  <% if current_user.favorite_find(room.id) %>
    <%= link_to 'お気に入り済', destroy_favorite_path(room.id), method: :delete, remote: true %>
  <% else %>
    <%= link_to 'お気に入り登録', create_favorite_path(room.id), method: :post, remote: true %>
  <% end %>
<% else %>
  <%= link_to 'お気に入り', "#", class: "favorite-btn" %>
<% end %>